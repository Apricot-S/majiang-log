{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "ignore": [
      "**/dist/",
      "**/examples/",
      "**/node_modules/",
      "**/LICENSE",
      "**/README.md",
      "**/THIRD-PARTY-NOTICES.md",
      "**/package-lock.json",
      "**/tsconfig.json"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": ["exports"]
  },
  "overrides": [
    {
      "ignore": ["**/dist/**/*", "**/examples/**/*", "**/node_modules/**/*"],
      "include": ["**/*.{js,mjs,cjs,ts}"]
    }
  ]
}
